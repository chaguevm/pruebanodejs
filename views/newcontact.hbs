<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3>New Contact</h3>
                </div>
                <div class="card-body">
                    <form action="/newcontact" method="POST">
                        <div class="form-group">
                            <input type="text" name="first_name"  placeholder="First Name" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <input type="text" name="last_name"  placeholder="Last Name" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <input type="email" name="email"  placeholder="Email" class="form-control" required 
                            pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$">
                        </div>
                        <div class="form-group">
                            <input type="text" name="number" onkeyup="this.value=this.value.replace(/[^\d]/,'')" placeholder="Number" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">Save Contact</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>