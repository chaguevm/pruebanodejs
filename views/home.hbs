<div class="container gedf-wrapper">
    <div class="row mt-2 mb-2">
        <h5 class="mt-2 mx-auto">Contact List for {{user.username}}</h5>
    </div>
    <div class="row">
        <div class="row justify-content-between w-100">
            <div class="col">
                <a href="/newcontact" class="btn btn-success mb-2"><i class="fa fa-plus"></i> Add Contact</a>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">First Name</th>
                        <th scope="col">Last Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Number</th>
                        <th scope="col">Options</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each contacts}}
                    <tr>
                        <th scope="row">{{inc @index}}</th>
                        <td>{{first_name}}</td>
                        <td>{{last_name}}</td>
                        <td>{{email}}</td>
                        <td>{{number}}</td>
                        <td>
                            <a href="/edit/{{id}}" class="btn btn-primary" alt="Edit Contact"><i class="fa fa-edit"></i></a>
                            <a href="/delete/{{id}}" onclick="return confirm('Are you sure you want to delete this contact?');" class="btn btn-danger"><i class="fa fa-trash"></i></a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
        <div class="row mx-auto">
            {{{pages}}}
        </div>
    </div>
</div>